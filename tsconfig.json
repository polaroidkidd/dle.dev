{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "lib": ["dom", "es2015"],
    "baseUrl": ".",
    "paths": {
      "@components": ["./src/app/components"],
      "@pages": ["./src/app/pages"]
    }
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "./src/**/*.d.ts"],
  "compileOnSave": false
}
